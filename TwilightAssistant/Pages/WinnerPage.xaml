<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TwilightAssistant.Pages.WinnerPage"
             Title="WinnerPage"
             xmlns:viewmodel="clr-namespace:TwilightAssistant.ViewModels"
             xmlns:models="clr-namespace:TwilightAssistant.Models"
             x:DataType="viewmodel:WinnerPageViewModel">

    <Grid RowDefinitions="80,*,*,60">

        <Label Text="WINNER" FontSize="32" CharacterSpacing="2" Grid.Row="0"></Label>

        <Label Text="{Binding Winner.Name}" FontSize="32" CharacterSpacing="2" Grid.Row="1"></Label>

        <Image Source="{Binding Winner.RaceLogo}" Aspect="AspectFit" Grid.Row="2"></Image>

        <Button Text="HOME" FontSize="28" CharacterSpacing="2" Clicked="GoHome" Grid.Row="3"></Button>

    </Grid>
    
</ContentPage>